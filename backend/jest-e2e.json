{
  "rootDir": ".",
  "testEnvironment": "node",
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "testMatch": [
    "<rootDir>/src/**/*.e2e.spec.ts"
  ],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.json",
        "isolatedModules": false,
        "diagnostics": {
          "warnOnly": true
        }
      }
    ]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/src/infrastructure/test/jest.setup.e2e.ts"
  ]
}