{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "transform": "typia/lib/transform"
      },
      {
        "transform": "@nestia/core/lib/transform"
      }
    ],
    "outDir": "./dist-test",
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "baseUrl": "./src",
  "paths": {
    "@/*": [
      "*"
    ]
  }
}
