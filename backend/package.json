{
  "name": "dondff-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "kysely-codegen": "kysely-codegen --out-file src/infrastructure/database/types.d.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/bootstrap.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --projects ./jest.config.unit.cjs ./jest.config.e2e.cjs",
    "test:unit": "jest --config ./jest.config.unit.cjs",
    "test:e2e": "jest --config ./jest.config.e2e.cjs",
    "test:watch": "jest --watch",
    "test:cov": "jest --config ./jest.config.unit.cjs --coverage",
    "test:covall": "jest --projects ./jest.config.unit.cjs ./jest.config.e2e.cjs --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "ts-patch install",
    "migrate": "tsx -r tsconfig-paths/register src/infrastructure/database/migrate.ts latest",
    "migrate:down": "tsx -r tsconfig-paths/register src/infrastructure/database/migrate.ts down",
    "migrate:status": "tsx -r tsconfig-paths/register src/infrastructure/database/migrate.ts status",
    "jest:config": "jest --showConfig",
    "jest:clearCache": "jest --clearCache",
    "postinstall": "ts-patch install || true",
    "sdk": "nestia sdk -c src/infrastructure/test/nestia.config.ts",
    "e2e:sdk": "nestia e2e -c src/infrastructure/test/nestia.config.ts"
  },
  "dependencies": {
    "@nestia/core": "^8.0.8",
    "@nestia/e2e": "^8.0.8",
    "@nestia/fetcher": "^8.0.8",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.6",
    "kysely": "^0.28.7",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typia": "^9.7.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestia/benchmark": "^8.0.8",
    "@nestia/sdk": "^8.0.8",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.18.6",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "kysely-codegen": "^0.19.0",
    "nestia": "^8.0.8",
    "nock": "^14.0.10",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.20.0"
  }
}
