{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "\\.(ts|tsx)$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.test.json",
        "compiler": "typescript"
      }
    ]
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "setupFilesAfterEnv": [
    "<rootDir>/infrastructure/test/jest.setup.ts"
  ]
}